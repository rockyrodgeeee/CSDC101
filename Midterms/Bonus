1. STAR SHAPE:
#include <iostream>
using namespace std;

int main(){
  
     int n = 7;
            for (int i = 0; i < n; i++) {
                for (int j = 0; j < n; j++) {
                    if (
                        i == n / 2 || j == n / 2 ||
                        i == j || i + j == n - 1 ||
                        (i == 1 && (j == 2 || j == 4)) ||
                        (i == n - 2 && (j == 2 || j == 4))
                    )
                        cout << "*";
                    else
                        cout << " ";
                }
                cout << endl;
            }
            return 0;
        }

2. HEART
#include <iostream>
using namespace std;

int main(){
  
    int n = 6;
            for (int i = n / 2; i <= n; i += 2) {
                for (int j = 1; j < n - i; j += 2)
                    cout << " ";
                for (int j = 1; j <= i; j++)
                    cout << "*";
                for (int j = 1; j <= n - i; j++)
                    cout << " ";
                for (int j = 1; j <= i; j++)
                    cout << "*";
                cout << endl;
            }
            for (int i = n; i >= 1; i--) {
                for (int j = i; j < n; j++)
                    cout << " ";
                for (int j = 1; j <= (i * 2) - 1; j++)
                    cout << "*";
                cout << endl;
            }
            return 0;
        }

3. Pyramid Triangle:
#include <iostream>
using namespace std;

int main(){
  
   int n = 5;
            for (int i = 1; i <= n; i++) {
                for (int j = i; j < n; j++)
                    cout << " ";
                for (int k = 1; k <= (2 * i - 1); k++)
                    cout << "*";
                cout << endl;
            }
            return 0;
        }
